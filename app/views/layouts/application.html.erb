<!DOCTYPE html>
<html>
  <head>
    <title>TwitterRedesign</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="main-grid">
    <% if user_signed_in? %>
     
      <div class="left-container bg-dark">
          <div class="d-flex pt-3 pb-3 pr-3 pl-3">
            <img class="icon-user mr-2" src="https://www.ub.edu/idp/web/sites/default/files/staff/2019-10/default-avatar.png">
            <span class="title-color username"><%= link_to "#{current_user.username}", "/users/#{current_user.id}",
            class: "title-color" %></span>
          </div>
          <div class="d-flex text-center pl-3 pr-3 justify-content-between mt-3">
            <div>
              <span class="light-grey"><%=  following(current_user) %></span><br>
              <span class="title-color">Following</span>
            </div>
            <div>
              <span class="light-grey"><%=  followers(current_user) %> </span><br>
              <span class="title-color">Followers</span>
            </div>
          </div>
          <div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://cdn.icon-icons.com/icons2/1509/PNG/512/twitterhome_104282.png">
              <span class=" icon-text"><%= link_to 'HOME', root_path , class:'title-color'%></span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://static.thenounproject.com/png/395124-200.png">
              <span class="title-color icon-text">CONNECT</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://www.iconfinder.com/data/icons/feather-2/24/hash-512.png">
              <span class="title-color icon-text">DISCOVER</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" src="data:image/svg+xml;base64," />
              <span class="title-color icon-text">PROFILE</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://image.flaticon.com/icons/png/512/69/69517.png">
              <span class="title-color icon-text">STATISTICS</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" src="data:image/svg+xml;base64," />
              <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete, class: "sign-out title-color icon-text" %>
            </div>
          </div>
      </div>
      <div class="right-container">
        <div class="top-section d-flex justify-content-between pb-1 pr-3 pl-3 twitter-color">
          <div class="pt-2">
            <img class="icon-nav" src="data:image/svg+xml;base64," />
          </div>
          <div class="d-flex pt-2 pm-2">
            <img class="icon-nav-special mr-3"  src="data:image/svg+xml;base64," />
          </div>
        </div>
        <div class="bottom-section"> 
          <%= yield %>
      </div>
   
    <% else %>
      
        <div class="left-container twitter-color"></div>
        <div class="right-container text-center pt-3 pr-3 pl-3 pb-3 margin-login">
          <%= yield %>
        </div>
      
    <% end %>

  </body>
</html>
