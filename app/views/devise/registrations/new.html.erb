<h2>Join today</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <br>
    <%= f.text_field :username, placeholder: "username", class: "rounded signin-input" %>
  </div>

  <div class="field">
    <br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "rounded signin-input" %>
  </div>

  <div class="field">
    <br>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "rounded signin-input" %>
  </div>

  <div class="field">
    <br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password", class: "rounded signin-input" %>
  </div>

  <div class="actions">
    <br>
    <%= f.submit "Sign up", :class => 'twitter-color text-white border-login-btn signin-input' %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
